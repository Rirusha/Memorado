using Gtk 4.0;
using Adw 1;

template $DeckView : Adw.NavigationPage {
  tag: "deck_view";

  child: Adw.ToolbarView {

    [top]
    Adw.HeaderBar {
      title-widget: Adw.WindowTitle page_title {
        title: _("Edit Deck");
      };

      [end]
      Gtk.Button cancel_button {
        visible: false;
        tooltip-text: _("Cancel Selection");
        label: _("Cancel");
      }

      [end]
      Gtk.Button delete_button {
        visible: false;
        tooltip-text: _("Delete Selection");
        icon-name: "user-trash-symbolic";
      }

      [end]
      Gtk.MenuButton menu_button {
        menu-model: primary_menu;
        tooltip-text: _("Main Menu");
        icon-name: "open-menu-symbolic";
        primary: true;
      }

      [end]
      Gtk.Button selection_mode_button {
        visible: false;
        tooltip-text: _("Selection Mode");
        icon-name: "selection-mode-symbolic";
      }
    }

    content: Adw.Bin {
      child: Gtk.Overlay {
        vexpand: true;

        child: Gtk.ScrolledWindow {
          Gtk.Box {
            orientation: vertical;
            hexpand: true;
            vexpand: true;
            valign: start;
            margin-top: 24;
            margin-bottom: 84;
            margin-start: 18;
            margin-end: 18;

            Adw.Clamp {
              maximum-size: 400;
              tightening-threshold: 300;

              Gtk.Box {
                orientation: vertical;
                valign: center;
                spacing: 30;

                Gtk.Overlay {
                  halign: center;

                  Gtk.Label deck_icon {
                    label: "";
                    width-request: 128;
                    height-request: 128;

                    styles ["emoji-icon"]
                  }

                  [overlay]
                  Adw.Bin {
                    halign: end;
                    valign: end;

                    styles ["cutout-button"]

                    Gtk.MenuButton edit_icon_button {
                      icon-name: "document-edit-symbolic";

                      styles ["circular"]

                      accessibility {
                        label: _("Edit Deck Avatar");
                      }

                      popover: Gtk.EmojiChooser emoji_chooser {};
                    }
                  }
                }

                Adw.PreferencesGroup {
                  Adw.EntryRow name_entry {
                    title: _("Deck Name");
                  }
                }

                Gtk.ListBox cards_list {
                  selection-mode: none;

                  [placeholder]
                  Gtk.Box {
                    height-request: 180;

                    styles ["card"]

                    Adw.StatusPage {
                      title: _("No Cards");
                      description: _("This deck is empty");
                      hexpand: true;
                      vexpand: true;

                      styles ["compact"]
                    }
                  }
                }
              }
            }
          }
        };

        [overlay]
        Gtk.Button new_card_button {
          halign: center;
          valign: end;

          styles ["suggested-action", "pill", "new-deck-button"]

          layout {
            measure: true;
            clip-overlay: true;
          }

          Adw.ButtonContent {
            label: _("Aldoni Karton");
            icon-name: "list-add-symbolic";
          }
        }
      };
    };
  };
}

menu primary_menu {
  section {

    item {
      label: _("_Keyboard Shortcuts");
      action: "win.show-help-overlay";
    }

    item {
      label: _("_About Flash Cards");
      action: "app.about";
    }

  }
}
