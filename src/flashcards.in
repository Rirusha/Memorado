import os
import sys
import signal
import locale
import gettext

VERSION = '@VERSION@'
APP_ID = "@APPID@"
GETTEXT_PACKAGE = "@GETTEXT_PACKAGE@"
LOCALEDIR = "@LOCALE_DIR@"
NAME = "@NAME@"
PKGDATADIR = "@DATA_DIR@"

sys.path.insert(1, PKGDATADIR)
signal.signal(signal.SIGINT, signal.SIG_DFL)
locale.bindtextdomain('flashcards', LOCALEDIR)
locale.textdomain('flashcards')
gettext.install('flashcards', LOCALEDIR)

if __name__ == '__main__':
    import gi

    from gi.repository import Gio
    resource = Gio.Resource.load(os.path.join(PKGDATADIR, 'resources.gresource'))
    resource._register()

    from flashcards import main
    sys.exit(main.main(VERSION))
